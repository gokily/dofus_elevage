<div class="row mount-show">
  <div class="col-4 mount-info">
    <div class="row mount-info-head">
      <div class="col-6">
          <%= image_tag "dragodinde/dd_amande.png", class: "mount-img"%>
      </div>
      <div class="col-6">
        <%= render 'shared/mount_buttons', mount: @mount %>
      </div>
    </div>
    <div class="row mount-info-info">
      <div class="col-8">
        <ul>
          <li>Name:</li>
          <li>Sex:</li>
          <li>Father:</li>
          <li>Mother:</li>
          <li>Reproduction:</li>
          <li>Status:</li>
        </ul>
      </div>
      <div class="col-4">
        <ul>
          <li><%= @mount.name %></li>
          <li><%= @mount.translate_sex %></li>
          <li><%= @mount.father ?
                      link_to(@mount.father.name, mount_path(@mount.father)) :
                      'NA' %></li>
          <li><%= @mount.mother ?
                      link_to(@mount.mother.name, mount_path(@mount.mother)) :
                      'NA' %></li>
          <li><%= @mount.reproduction %></li>
          <li><%= @mount.repro_status %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-12 mount-genealogy">
    <%= render 'mount_genealogy', mount: @mount %>
  </div>
</div>