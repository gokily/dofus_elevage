<header class="navbar navbar-expand-lg navbar-fixed-top navbar-dark">

  <%= link_to "Dofus Elevage", root_path, id: "logo", class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse"
          data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
          aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <nav class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item"><%= link_to "Help", help_path %></li>
      <% if user_signed_in? %>
        <li class="nav-item"><%= link_to "Log out", sign_out_path %></li>
      <% else %>
        <li class="nav-item"><%= link_to "Log in", sign_in_path %></li>
      <% end %>
    </ul>
  </nav>
</header>